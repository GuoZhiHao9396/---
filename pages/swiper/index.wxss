.container{margin-top:30px;}
.container button{width:90%;margin-top:5px;}

.swiper{ width: 100%; position: relative; padding-bottom: 50%;}
.swiper swiper{ position: absolute; left: 0; top: 0;  width: 100%; height: 100%;}
.swiper image{ width: 100%; height: 100%;}
.swiper .dots{position: absolute;left:0;right: 0;bottom: 20rpx;display: flex;justify-content: center;}
.swiper .dots .dot{margin: 0 8rpx;width: 16rpx;height: 16rpx;border-radius: 8rpx;transition: all .0s;}
.swiper .dots .dot.active{width: 30rpx;background: #ff0000;}

.dots_two{position: absolute;left:0;right: 0;bottom: 20rpx;display: flex;justify-content: center;}
.dots_two .dot{margin: 0 8rpx;width: 24px;height: 24px;border-radius: 50%;transition: all .6s;background:rgba(0, 0, 0, 0.5);text-align: center;line-height: 24px;color:#ffffff;}
.dots_two .dot.active{background: #ff0000;color:#ffffff;}

.dots_three{position: absolute;right: 0px;bottom: 0rpx;display: flex;justify-content: center;background:rgba(0, 0, 0, 0.5);color:#fff;padding:0 10px;}
.dots_four{position: absolute;left:0px;width:100%;bottom:0;display: flex;background:rgba(0, 0, 0, 0.5);color:#fff;padding:0 10px;}